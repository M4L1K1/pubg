#!/data/data/com.termux/files/usr/bin/bash

echo
Menu(){
clear
echo '----------------------------------------------'
echo 'Atenção para as Opções, Não esquecer de alterar
      as Permições da pasta e Sub Pastas  '
echo '----------------------------------------------'
echo
echo 'Escolha a Versão do Jogo : '
echo 
echo '1. Restaura Original'
echo '2. Korea'
echo '3. Primeira Execução Kr'
echo '4. SAIR'
echo
echo -n 'Qual a opção desejada : '
read opcao # read le a variável opcao

# Recebe o valor da opção lida e executa a função correspondente
case $opcao in

1) Um ;; # funcao Um
2) Dois ;; # funcao Dois
3) Três ;;
4) Sair ;;
*) 'Opção desconhecida.' ; echo; Menu;;

esac
}


# funcao exibe 1
Um(){
echo 'Iniciando restauração de Arquivos'
mv /data/data/com.pubg.krmobile/lib/libUE4.so /storage/emulated/0/Korea/mod
mv /storage/emulated/0/Korea/Backup/libUE4.so /data/data/com.pubg.krmobile/lib
sleep 5
echo '100 %'
sleep 5 
clear
Menu
}

Dois(){
echo 'Iniciando Korea Aguarde'
echo "Script exclusivo Membros Clâ Shot"


am start -n com.pubg.krmobile/com.epicgames.ue4.SplashActivity
clear
echo " "
sleep 10
echo " "
echo " "
echo " "
mv /data/data/com.pubg.krmobile/lib/libUE4.so /storage/emulated/0/Korea/Backup
echo " "
echo " "
chmod 777 /storage/emulated/0/Korea/mod
mv /storage/emulated/0/Korea/mod/libUE4.so /data/data/com.pubg.krmobile/lib
sleep 4
echo " "
chmod 2755 /data/data/com.pubg.krmobile/lib/libUE4.so
chmod 2775 /data/data/com.pubg.krmobile/cache/*
echo "Troca de libs ok "
echo
echo "Aguardando Carregar Cache"
until ps -e | grep com.pubg.krmobile > /dev/true
do
      echo "Pubg está em execução."
      sleep 10
done
}

Três(){
echo 'Trocando a pasta ShadowTracker Aguarde !!!'
mv /storage/emulated/0/Android/data/com.pubg.krmobile/files/UE4Game/ShadowTrackerExtra/ShadowTrackerExtra /storage/emulated/0/Korea/Backup 
mv /storage/emulated/0/Korea/mod/ShadowTrackerExtra /storage/emulated/0/Android/data/com.pubg.krmobile/files/UE4Game/ShadowTrackerExtra/
echo "100% completa"
sleep 4
clear 
Menu
}

Sair(){

if [[ exit ]]; then
echo 'Exit'
echo
fi

}

# Primeira função a ser executada no programa.
Menu
